{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "wiki",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "wiki",
          "servicePath": "/",
          "localPath": "./",
          "uploadType": "package",
          "containerPort": 3000,
          "envVariables": {
            "DB_TYPE": "mysql",
            "DB_NAME": "wiki"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CynosDB",
          "name": "wikijs",
          "envMap": {
            "IP": "DB_HOST",
            "PORT": "DB_PORT",
            "USERNAME": "DB_USER",
            "PASSWORD": "DB_PASS"
          }
        }
      ]
    }
  }
}
